<script type="text/javascript">
// 导航控制鼠标经过
  var flag = 1;
  $('.navi a').mouseover(function(){
    if($(this).parent().hasClass('cur')){
      flag = 0;
    }
    $(this).parent().addClass('cur');
    $(this).parent().children('.sub-nav').addClass('cur');
  })
  $('.navi a').mouseleave(function(){
    if(flag == 1){
      $(this).parent().removeClass('cur');
      $(this).parent().children('.sub-nav').removeClass('cur');
    }
    flag = 1;
  })
</script>
